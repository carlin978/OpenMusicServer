{
	"$schema": "https://json.schemastore.org/prettierrc",
	"printWidth": 140,
	"singleQuote": true,
	"semi": true,
	"useTabs": true,
	"arrowParens": "avoid",
	"trailingComma": "none",
	"quoteProps": "consistent",
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss"
	],
	"tailwindStylesheet": "./src/style.css",
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
