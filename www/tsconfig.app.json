{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"paths": {
			"@components/*": [
				"./src/components/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte"
	]
}
